<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST"> <!--A pesar de que sea POST se enviara enmascaradamente el id por el metodo PUT-->
                <input type="hidden" name="_method" value="PUT"> <!--Input invisible para realizar el put-->
                <div class="form-group">
                    <input type="text" name="title" class="form-control" value="{{note.title}}"/>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{note.description}}</textarea>    
                </div>
                <div>
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>